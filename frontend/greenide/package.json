{
  "name": "greenide",
	"displayName": "GreenIDE",
	"description": "VSCode Extension zum erkennen von Energiehotspots",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"

	},
	
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:greenIDE-home",
		"onView:greenIDE-configs",
		"onView:greenIDE-help",
		"onCommand:greenIDE.run"
	],
	"main": "./out/extension.js",
	"contributes": {

		"viewsContainers": {
            "activitybar": [
                {
                    "id": "greenIDE-explorer",
                    "title": "GreenIDE",
                    "icon": "resources/greenide-icon.svg"
                }
            ]
        },
        "views": {
            "greenIDE-explorer": [
                {
                    "id": "greenIDE-home",
                    "name": "GreenIDE",
					"contextualTitle": "GreenIDE Home"
                },
                {
                    "id": "greenIDE-configs",
                    "name": "Configurations",
					"contextualTitle": "Configuration"
                },
				{
					"id": "greenIDE-help",
					"name": "Help",
					"contextualTitle": "Help & Feedback",
					"visibility": "collapsed"
				}
            ]
        },

		"capabilities": {
			"hoverProvider": "true"	
		},

		"commands": [
			{
				"command": "greenIDE.run",
				"title": "GreenIDE",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "greenIDE-home.helloworld",
				"title": "test views"
			},
			{
				"command": "greenIDE.config1",
				"title": "Config 1 - true statements: TPAQ, ROLZ"
			},
			{
				"command": "greenIDE.config2",
				"title": "Config 2 - true statements: ANSI1, RLT"
			},{
				"command": "greenIDE.config3",
				"title": "Config 3 - true statements: SKIP, RLT"
			},
			{
				"command": "configsView.reveal",
				"title": "Configs View: Reveal"
			}
		],

		"menus": {
			
			"view/title": [
				{
					"command": "greenIDE.run",
					"when": "view == greenIDE-home",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "greenIDE-home.helloworld",
					"when": "view == greenIDE-home"
				}
			]
		},

		"languages": [{
			"id": "java",
			"extensions": [".java"]
		}]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
